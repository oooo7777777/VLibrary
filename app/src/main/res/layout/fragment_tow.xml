<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="com.v.demo.R" />

        <variable
            name="v"
            type="com.v.demo.TwoFragment" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/bt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="设置Drawable"
            android:textAllCaps="false"
            app:vb_click="@{v}"
            app:vb_drawable_bottom="@{R.mipmap.ic_launcher}"
            app:vb_drawable_left="@{R.mipmap.ic_launcher}"
            app:vb_drawable_left_height="@{70}"
            app:vb_drawable_left_width="@{70}"
            app:vb_drawable_right="@{R.mipmap.ic_launcher}"
            app:vb_drawable_top="@{R.mipmap.ic_launcher}"
            app:vb_drawable_top_height="@{100}"
            app:vb_drawable_top_width="@{100}" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="图片"
                android:textAllCaps="false"
                app:vb_click="@{v}" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="圆角"
                android:textAllCaps="false"
                app:vb_click="@{v}" />


            <Button
                android:id="@+id/bt7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="不同圆角"
                android:textAllCaps="false"
                app:vb_click="@{v}" />


            <Button
                android:id="@+id/bt8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="圆形带边框"
                android:textAllCaps="false"
                app:vb_click="@{v}" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:vb_img_url="@{R.mipmap.bg_wechatimg11}"
            app:vb_img_stroke_width="@{10}"
            app:vb_img_stroke_color="@{0xFFFF0000}"
            app:vb_img_color="@{0x55FF0000}"
            tools:src="@mipmap/bg_wechatimg11" />

    </LinearLayout>
</layout>
